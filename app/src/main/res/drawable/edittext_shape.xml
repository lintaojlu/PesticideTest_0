<?xml version="1.0" encoding="utf-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <solid
                android:color="#EFEFEF"
                />
            <corners
                android:radius="5dip"
                />
            <stroke
                android:width="1.5dp"
                android:color="#000000"/>

            <!--andl：修改输入框EditText的padding，避免输入的文本过于紧贴左边框-->
            <padding
                android:left="5dp"
                />
        </shape>
    </item>
</layer-list>
