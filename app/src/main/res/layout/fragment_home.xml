<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/jlu.picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_main"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.3" />
    <TextView
        android:id="@+id/userIDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="userID:09212343"
        app:layout_constraintLeft_toRightOf="@id/jlu.picture"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="2dp"
        />
    <TextView
        android:id="@+id/tipsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您是第3432位登录者"
        app:layout_constraintLeft_toRightOf="@id/jlu.picture"
        app:layout_constraintTop_toBottomOf="@id/userIDTextView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="2dp"
        />

    <TextView
        android:id="@+id/horizontalLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#172832"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tipsTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />




    <TextView
        android:id="@+id/horizontalLine02"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#898989"
        app:layout_constraintBottom_toTopOf="@id/bt_cpw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/bt_cpw"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="104dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="35dp"
        android:text="修改密码"
        android:textSize="20dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontalLine" />

    <TextView
        android:id="@+id/horizontalLine03"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#898989"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/bt_cpw"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <Button
        android:id="@+id/bt_input_model"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:text="我的模型"
        android:gravity="left|center_vertical"
        android:paddingLeft="35dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/horizontalLine03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/horizontalLine04"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#898989"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/bt_input_model"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <Button
        android:id="@+id/bt_signout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:text="退出登录"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
         />



</androidx.constraintlayout.widget.ConstraintLayout>